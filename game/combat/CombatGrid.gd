## Centre la grille style Dofus sur l'√©cran
func _center_grid_on_screen():
	var screen_size = get_viewport().get_visible_rect().size
	
	# Dofus utilise une grille fixe de 17x15, toujours centr√©e
	# Calculer les dimensions de la grille isom√©trique
	var grid_screen_width = grid_width * CELL_WIDTH
	var grid_screen_height = grid_height * CELL_HEIGHT
	
	# Centrer parfaitement au milieu de l'√©cran (style Dofus)
	position = Vector2(
